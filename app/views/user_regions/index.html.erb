<div class="container">
<p id="notice"><%= notice %></p>

<h1>User Regions List</h1>

<table class ="table table-hover ">
   <thead>
    <tr>
    <th> User name</th>
      <th>Region name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_regions.each do |user_region| %>
      <tr>
      <td><%if user_region.user_id.present?%>
        <%= User.find(user_region.user_id).first_name %>
        <% end %></td>
      
        <td><%if user_region.region_id.present?%>
        <%= Region.find(user_region.region_id).region_name %>
        <%end%></td>

        <td>
          <%= link_to 'Show',user_regions_show_user_region_path(user_region),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#myModal',:class=>"btn btn-success"} %></td>
        
           <td>
        <td><%= link_to 'Edit', edit_user_region_path(user_region),:class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', user_region,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
        
  </tbody>
</table>

<br>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <h4 class="modal-title">UserRegions Info</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
     </div>
    </div>
</div>

 