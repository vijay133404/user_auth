<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table class = "table table-hover">  <thead>
    <tr>
      <th>Country name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.country_name %></td>
        <td><%= link_to 'Show', country ,:class=>"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_country_path(country),:class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', country,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Country', new_country_path %>
