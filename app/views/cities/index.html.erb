<div class="container-fluid">
<p id="notice"><%= notice %></p>

  <div class="update_city">
<h1>Cities List</h1>
   <div class="table-responsive">
    <table class = "table table-hover">  <thead>
    <tr>
      <th>City name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td>
          <%= link_to 'Show', cities_show_city_path(city),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#myModal',:class=>"btn btn-success"} %></td>
        
           
        <td><%= link_to 'Edit',cities_edit_city_path(city),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#editcity',:class=>"btn btn-success"} %></td>
        <td><%= link_to 'Destroy', city,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

</div>
<div id="cities_id"></div>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <h4 class="modal-title">City Info</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
     </div>
    </div>
</div>
<div id="cities_id"></div>
</div>
<div class="modal fade" id="editcity" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <h4 class="modal-title">City update Infos</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
     </div>
    </div>
</div>
