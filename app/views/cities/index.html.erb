<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table class = "table table-hover">  <thead>
    <tr>
      <th>City name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td><%= link_to 'Show', city ,:class=>"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_city_path(city),:class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', city,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path ,:class=>"btn btn-success"%>
