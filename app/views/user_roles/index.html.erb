<div class="container">
<p id="notice"><%= notice %></p>

<h1>User Roles List</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Role name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_roles.each do |user_role| %>
      <tr>
        <td>
        <%= user_role.role_name %>
          
        </td>
        <td><%= link_to 'Show', user_role,:class=>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_user_role_path(user_role),:class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', user_role,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

