<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Start date</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= @country= Country.find(company.country_id).country_name %><td>
        <td><%= @state= State.find(company.state_id).state_name %></td>
        <td> <%= @city= City.find(company.city_id).city_name %></td>
        <td><%= company.postcode %></td>
        <td><%= company.start_date %></td>
        <td><%= company.active %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

