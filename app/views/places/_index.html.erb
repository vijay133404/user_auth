
<p id="notice"><%= notice %></p>
<div class="place-update">
<div id="place-edit-partial"></div>

  <h1>Places list</h1>
  
  <table class = "table table-hover">
  <thead>
    <tr>
      <th>Place name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.place_name %></td>
          <td><%= place.company_id %></td>
          
          <td><%= link_to 'Show', place,:class=>"btn btn-success" %></td>
          <td><%= link_to 'Edit',  place_edit_place_path(place),:class=>"btn btn-success",:remote=>true %></td>
          <td><%= link_to 'Destroy', place,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
   </table>
    <br>
</div>

<div id="place-edit-partial"></div>
 