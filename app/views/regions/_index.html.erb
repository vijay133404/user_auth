<div class="container-fluid">
<p id="notice"><%= notice %></p>
<div class="update_region1">

<h1>Regions List</h1>
  <div class="table-responsive">
<table class = "table table-hover">
  <thead>
    <tr>
      <th>Region name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.region_name %></td>
        <td>
          <%= link_to 'Show',region_show_region_path(region),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#myModal',:class=>"btn btn-success"} %></td>
        
         
        <td><%= link_to 'Edit', region_edit_region_path(region),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#edit-region',:class=>"btn btn-success"} %></td>
        <td><%= link_to 'Destroy', region, :class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

</div>
</div>
