<p id="notice"><%= notice %></p>

<h1>Regions List</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Region name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.region_name %></td>
        <td><%= link_to 'Show', region,:class=>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_region_path(region),:class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', region, :class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_region_path, :class=>"btn btn-success" %>
