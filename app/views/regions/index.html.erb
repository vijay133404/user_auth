<div class="container">
<p id="notice"><%= notice %></p>
<div class="update_region1">

<h1>Regions List</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Region name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.region_name %></td>
        <td>
          <%= link_to 'Show',region_show_region_path(region),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#myModal',:class=>"btn btn-success"} %></td>
        
           <td>
        <td><%= link_to 'Edit', region_edit_region_path(region),:class=>"btn btn-success",:remote=>true %></td>
        <td><%= link_to 'Destroy', region, :class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_region_path, :class=>"btn btn-success" %>
</div>
</div>
<br><br><br>
<div id="region-edit-partial"></div> 

</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <h4 class="modal-title">Region Info</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
     </div>
    </div>
</div>