<div class="container-fluid">
<p id="notice"><%= notice %></p>
<div class="update_states">
<h1>States List</h1>
  <div class="table-responsive">
<table class = "table table-hover"> 
 <thead>
    <tr>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td>
          <%= link_to 'Show',  states_show_state_path(state),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#myModal',:class=>"btn btn-success"} %></td>
        
        
        <td><%= link_to 'Edit',states_edit_state_path(state),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#editstate',:class=>"btn btn-success"} %></td>
        <td><%= link_to 'Destroy', state,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
</div>
</div>

</div>
