<p id="notice"><%= notice %></p>

<h1>States</h1>

<table class = "table table-hover">  <thead>
    <tr>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td><%= link_to 'Show', state,:class=>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_state_path(state),:class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', state,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path ,:class=>"btn btn-success" %>
