<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <div class="update_states">
   <h1>States List</h1>
  <div class="table-responsive">
   <table class = "table table-hover">  <thead>
    <tr>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td>
          <%= link_to 'Show',  states_show_state_path(state),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#myModal',:class=>"btn btn-success"} %></td>
        
       
           
        <td><%= link_to 'Edit',  states_edit_state_path(state),{:remote => true,'data-toggle' =>"modal", 'data-target'=>'#editstate',:class=>"btn btn-success"} %></td>

        <td><%= link_to 'Destroy', state,:class=>"btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<br>
</div>
</div>

</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <h4 class="modal-title">States Info</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
     </div>
    </div>
</div>
<div class="modal fade" id="editstate" role="dialog">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <h4 class="modal-title"> update States Info</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
     </div>
    </div>
</div>